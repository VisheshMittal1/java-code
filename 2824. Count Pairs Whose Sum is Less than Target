class Solution {
    public int countPairs(List<Integer> nums, int target) {
        int[] arr = nums.stream().mapToInt(i -> i).toArray();
        java.util.Arrays.sort(arr);
        int left = 0;
        int right = arr.length - 1;
        int count = 0;
        while (left < right) {
            if (arr[left] + arr[right] < target) {
                count += (right - left);
                left++;
            } else {
                right--;
            }
        }

        return count;
    }
}
